<div class="patient_list">
  <h3 class="patient_h3">検索結果</h3>
    <table class="table_list">
      <thead>
        <tr class="tr_list">
          <th class="th_list">カルテ番号</th>
          <th class="th_list">名前</th>
          <th class="th_list">電話番号</th>
          <th class="th_list">注意すること</th>
          <th class="th_list">治療内容</th>
          <th class="th_list">来院日</th>
          <th class="th_list">詳細</th>
          <th class="th_list">編集</th>
          <th class="th_list">削除</th>
        </tr>
      </thead>

      <tbody>
        <% @results.each do |patient_registration| %>
          <tr class="tr_list">
            <td class="td_list"><%= patient_registration.medical_record_number %></td>
            <td class="td_list"><%= patient_registration.name %></td>
            <td class="td_list"><%= patient_registration.phone_number %></td>
            <td class="td_list"><%= patient_registration.warn %></td>
            <td class="td_list"><%= patient_registration.maintenance_or_treatment %></td>
            <td class="td_list"><%= patient_registration.visit_date %></td>
            <td class="td_list"><%= link_to "詳細", patient_registration %></td>
            <td class="td_list"><%= link_to "編集", edit_patient_registration_path(patient_registration.id) %></td>
            <td class="td_list"><%= link_to "削除", patient_registration, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="form-home">
      <p><%= link_to "ホームへ戻る", root_path %></p>
    </div>
</div>
